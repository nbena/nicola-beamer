\ProvidesPackage{beamercolorthemeNicola}

\mode<presentation>

\definecolor{MoonCloudStandard}{RGB}{43,61,80} %dark blue
\definecolor{MoonCloudgrey}{RGB}{128,128,128} % grey
\definecolor{MoonCloudtitle}{RGB}{254,254,254} % white!
\definecolor{MoonCloudyellow}{RGB}{188,156,16} % a dark yellow

% \definecolor{MoonCloudblockbody}{RGB}{240,255,255}
% \definecolor{MoonCloudblockbody}{RGB}{220,220,220}
\definecolor{MoonCloudBlockBody}{RGB}{220,220,200} %kinda mix betweeb grey and beige
\definecolor{MoonCloudAlertBlockBody}{RGB}{180,180,180} % grey, darker
\definecolor{MoonCloudFootline}{RGB}{180,180,180}

% blocks
\setbeamercolor{block title}{fg=white, bg=MoonCloudStandard}
\setbeamercolor{block body}{fg=MoonCloudgrey, bg=MoonCloudBlockBody}

\setbeamercolor{block title alerted}{fg=white, bg=MoonCloudStandard}
\setbeamercolor{block body alerted}{fg=black, bg=MoonCloudAlertBlockBody}

% text
\setbeamercolor{normal text}{fg=MoonCloudStandard}
\setbeamercolor{alerted text}{fg=black}
\setbeamercolor{title}{fg=MoonCloudtitle,bg=MoonCloudStandard}
\setbeamercolor{frametitle}{fg=white, bg=MoonCloudStandard}
\setbeamercolor{itemize item}{fg=MoonCloudStandard}
\setbeamercolor{itemize subitem}{fg=MoonCloudStandard}
\setbeamercolor{itemize subsubitem}{fg=MoonCloudStandard}
\setbeamercolor{enumerate item}{fg=MoonCloudStandard}
\setbeamercolor{enumerate subitem}{fg=MoonCloudStandard}
\setbeamercolor{enumerate subsubitem}{fg=MoonCloudStandard}
\setbeamercolor{description item}{fg=MoonCloudStandard}
\setbeamercolor{description subitem}{fg=MoonCloudStandard}
\setbeamercolor{description subsubitem}{fg=MoonCloudStandard}

% doesnt work
\AtBeginEnvironment{block}{
    \setbeamercolor{itemize item}{fg=MoonCloudStandard}
    \setbeamercolor{enumerate item}{fg=MoonCloudStandard}
}

\setbeamercolor{footline}{bg=MoonCloudFootline, fg=MoonCloudStandard}

% "attributes"
\setbeamercolor{author}{fg=MoonCloudgrey}
\setbeamercolor{date}{fg=MoonCloudgrey}
\setbeamercolor{framesubtitle}{fg=MoonCloudgrey}

\mode<all>