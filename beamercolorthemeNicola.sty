\ProvidesPackage{beamercolorthemeNicola}

\mode<presentation>

\definecolor{DarkBlue}{RGB}{43, 61, 80} %dark blue
\definecolor{DarkGrey}{RGB}{128, 128, 128} % dark grey
\definecolor{DarkerGrey}{RGB}{191, 191, 191} % a slightly darker grey, used in the footer
\definecolor{LightGrey}{RGB}{217, 217, 217} % light grey
\definecolor{VeryLightGrey}{RGB}{230, 230, 230} % a very light grey
\definecolor{White}{RGB}{254 ,254, 254} % white!
%\definecolor{Gold}{RGB}{245, 225, 138} % gold-ish
\definecolor{Goldenrod}{RGB}{218, 165, 32} % "dark" gold
\definecolor{VeryDarkGoldGrey}{RGB}{124, 124, 80} % a very dark mix between gold and grey
\definecolor{DarkGoldGrey}{RGB}{225, 225, 208} % a sort of mix between gold and grey
\definecolor{LightGoldGrey}{RGB}{235, 235, 224} % a sort of mix between gold and grey, but lighter
\definecolor{VeryLightGoldGrey}{RGB}{245, 245, 239} % a sort of mix between gold and grey, very light
\definecolor{Orange}{RGB}{255, 148, 77} % a light orange, used for alert?

% now applying those colors

% blocks
% normal block
\setbeamercolor{block title}{fg=White, bg=DarkBlue}
\setbeamercolor{block body}{fg=DarkBlue, bg=VeryLightGrey}
% alert block
\setbeamercolor{block title alerted}{fg=White, bg=DarkBlue}
\setbeamercolor{block body alerted}{fg=DarkBlue, bg=VeryLightGoldGrey}

% text
\setbeamercolor{normal text}{fg=DarkBlue}
\setbeamercolor{alerted text}{fg=Goldenrod}

\setbeamercolor{title}{fg=White,bg=DarkBlue}
\setbeamercolor{frametitle}{fg=White, bg=DarkBlue}

\setbeamercolor{itemize item}{fg=DarkBlue}
\setbeamercolor{itemize subitem}{fg=DarkBlue}
\setbeamercolor{itemize subsubitem}{fg=DarkBlue}

\setbeamercolor{enumerate item}{fg=DarkBlue}
\setbeamercolor{enumerate subitem}{fg=DarkBlue}
\setbeamercolor{enumerate subsubitem}{fg=DarkBlue}

% change the numbered bullets
\setbeamercolor{item projected}{bg=DarkBlue, fg=White}

\setbeamercolor{description item}{fg=DarkBlue}
\setbeamercolor{description subitem}{fg=DarkBlue}
\setbeamercolor{description subsubitem}{fg=DarkBlue}

% footer
\setbeamercolor{footline}{bg=DarkerGrey, fg=DarkBlue}

% toc
\setbeamercolor{section in toc}{bg=White, fg=DarkBlue}
\setbeamercolor{subsection in toc}{bg=White, fg=DarkBlue}
% numbers of sections - not needed since we use
% item projected
% \setbeamercolor{section number projected}{bg=DarkBlue, fg=White}
% \setbeamercolor{subsection number projected}{bg=DarkBlue, fg=White}

% "attributes"
\setbeamercolor{author}{fg=DarkGrey}
\setbeamercolor{date}{fg=DarkGrey}
\setbeamercolor{framesubtitle}{fg=DarkGrey}

\mode<all>